<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		
		<% if @error %>
			<div class="bg-danger"><%= @error %></div>
		<% end %>

		<%= form_for [:admin, @company] do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.submit "Add Company", class: 'btn btn-default' %>
			</div>
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>