<div class='row'>
	<div class='col-md-4'>
		<%= render 'office/users/profile_photo_area' %>
	</div>
	<div class='col-md-8'></div>
</div>

<div class='row'>
	<div class='col-md-4'></div>
	<div class='col-md-4'>
		<%= form_tag '/cohorts', method: 'post' do %>
			<div class='form-group'>
				<%= label_tag :name %>
				<%= text_field_tag :name, nil, class: 'form-control' %>
			</div>
			<div class='form-group'>
				<%= submit_tag "Create Cohort", class: 'btn btn-default' %>
			</div>
		<% end %>
	</div>
	<div class='col-md-4'></div>
</div>