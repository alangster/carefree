<%= form_tag '/cohorts', method: 'post' do %>
	<div class='form-group'>
		<%= label_tag :name %>
		<%= text_field_tag :name, nil, class: 'form-control' %>
	</div>
	<div class='form-group'>
		<%= submit_tag "Create Cohort", class: 'btn btn-default' %>
	</div>
<% end %>
<button class='btn btn-default' id='remove-form'>X</button>
