<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">

		<%= form_tag password_resets_path, method: 'post' do %>
			<div class="form-group">
				<%= label_tag :email %>
				<%= text_field_tag :email, nil, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= submit_tag "Reset Password", class: 'btn btn-default' %>
			</div>
		<% end %>
		
	</div>
	<div class="col-md-4"></div>
</div>